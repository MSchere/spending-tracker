# =============================================================================
# Spending Tracker - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# For Docker deployment, these are used by docker-compose.yml
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# For local development:
DATABASE_URL="postgresql://spending:spending_password@localhost:5432/spending_tracker"

# For Docker deployment (used by docker-compose.yml):
POSTGRES_USER="spending"
POSTGRES_PASSWORD="change-this-secure-password"
POSTGRES_DB="spending_tracker"

# -----------------------------------------------------------------------------
# NextAuth Configuration
# -----------------------------------------------------------------------------
# The URL where your app is hosted
NEXTAUTH_URL="http://localhost:3000"

# Secret for signing JWTs (min 32 chars, generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-min-32-chars-here"

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Encryption key for 2FA secrets (must be exactly 32 characters)
# Generate with: openssl rand -base64 24 | head -c 32
ENCRYPTION_KEY="your-32-character-encryption-key"

# -----------------------------------------------------------------------------
# Wise API Configuration
# -----------------------------------------------------------------------------
# Get your API token from: https://wise.com/settings/api-tokens
WISE_API_TOKEN="your-wise-personal-api-token"

# API environment: "sandbox" for testing, "production" for real data
WISE_ENVIRONMENT="production"

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME="Spending Tracker"
NODE_ENV="development"

# -----------------------------------------------------------------------------
# Alpha Vantage API (optional - for stocks/crypto prices)
# -----------------------------------------------------------------------------
# Get your free API key from: https://www.alphavantage.co/support/#api-key
# Free tier: 25 requests/day
ALPHA_VANTAGE_API_KEY="your-alpha-vantage-api-key"

# -----------------------------------------------------------------------------
# Docker Deployment (optional)
# -----------------------------------------------------------------------------
# Port to expose the app on the host
APP_PORT="3000"
